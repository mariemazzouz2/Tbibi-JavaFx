<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ListQuestionDocteur"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #f7f9fc;">

    <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="20">
        <!-- Top menu -->
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10 20 10 20; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <ImageView fitHeight="40" fitWidth="250" pickOnBounds="true">
                <image>
                    <Image url="@assets/logo2.jpg" />
                </image>
            </ImageView>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px;" />
            <Button text="Consultation" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px;" />
            <Button fx:id="forum" onAction="#goForum" text="Forum" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px;" />
            <Button text="Evenement" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px;" />
            <Button text="Suivie Medicale" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px;" />
            <Button text="Produit" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px;" />

            <Label fx:id="labelNomUtilisateur" styleClass="user-info" text="Malak">
                <graphic>
                    <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" fill="black" />
                </graphic>
            </Label>
            <Button text="Logout" onAction="#logout" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-padding: 6 12;" />
        </HBox>

        <!-- Titre -->
        <Label text="Questions des Patients" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #5c6bc0;" />

        <!-- Barre de recherche et tri -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="searchField" promptText="Rechercher par titre ou spécialité..."
                       prefWidth="300"
                       style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-font-size: 14px; -fx-padding: 8;" />

            <!-- Tri -->
            <ComboBox fx:id="sortComboBox" promptText="Trier par" prefWidth="150"
                      style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-font-size: 14px; -fx-padding: 8;" />
            <Button fx:id="sortOrderButton" text="⬆" onAction="#handleSort"
                    style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;" />
        </HBox>

        <!-- ScrollPane contenant la pagination et les cartes -->
        <ScrollPane fx:id="questionsScrollPane" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
            <VBox spacing="10" alignment="TOP_CENTER">
                <Pagination fx:id="pagination" style="-fx-page-information-visible: false;"/>
            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>