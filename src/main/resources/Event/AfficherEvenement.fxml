<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.Evenement.AfficherEvent"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Ajouter un Événement"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane vgap="15" hgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <columnConstraints>
            <ColumnConstraints minWidth="180" prefWidth="180" halignment="RIGHT" />
            <ColumnConstraints minWidth="800" prefWidth="800" hgrow="ALWAYS" />
            <ColumnConstraints prefWidth="100" hgrow="NEVER" />
        </columnConstraints>

        <!-- Titre -->
        <Label text="Titre de l'événement :" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <TextField fx:id="titreField" promptText="Entrez le titre" prefWidth="200"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Description -->
        <Label text="Description :" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <TextArea fx:id="descriptionField" promptText="Entrez la description" prefWidth="200" prefHeight="80"
                  style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Date début -->
        <Label text="Date de début :" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <DatePicker fx:id="dateDebutPicker" prefWidth="200"
                    style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Date fin -->
        <Label text="Date de fin :" GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <DatePicker fx:id="dateFinPicker" prefWidth="200"
                    style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                    GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Lieu -->
        <Label text="Lieu :" GridPane.rowIndex="4" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <TextField fx:id="lieuField" promptText="Sélectionnez sur la carte" prefWidth="200"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Map -->
        <Label text="Carte :" GridPane.rowIndex="5" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <WebView fx:id="mapView" minHeight="600" minWidth="800" prefHeight="600" prefWidth="800" maxHeight="600" maxWidth="800"
                 GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Latitude -->
        <Label text="Latitude :" GridPane.rowIndex="6" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <TextField fx:id="latitudeField" promptText="Sélectionnez sur la carte" prefWidth="200" editable="false"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- Longitude -->
        <Label text="Longitude :" GridPane.rowIndex="7" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <TextField fx:id="longitudeField" promptText="Sélectionnez sur la carte" prefWidth="200" editable="false"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                   GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <!-- Statut -->
        <Label text="Statut :" GridPane.rowIndex="8" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <ComboBox fx:id="statutComboBox" promptText="Sélectionnez le statut" prefWidth="200"
                  style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                  GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <!-- Image -->
        <Label text="Image :" GridPane.rowIndex="9" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <Label fx:id="imagePathLabel" text="Aucune image choisie"
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"
               GridPane.rowIndex="9" GridPane.columnIndex="1"/>
        <HBox spacing="10" GridPane.rowIndex="9" GridPane.columnIndex="2">
            <Button text="Choisir une image" onAction="#chooseImage"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 12px; -fx-padding: 5 10;"/>
            <Button text="Supprimer" onAction="#removeImage"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 12px; -fx-padding: 5 10;"/>
            <Button text="Générer avec IA" onAction="#generateAIImage"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 12px; -fx-padding: 5 10;"/>
        </HBox>

        <!-- Catégorie -->
        <Label text="Catégorie :" GridPane.rowIndex="10" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-wrap-text: true;"/>
        <ComboBox fx:id="categorieComboBox" promptText="Sélectionnez la catégorie" prefWidth="200"
                  style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-font-size: 12px;"
                  GridPane.rowIndex="10" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="backButton" text="Retour" onAction="#onBackClick"
                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-size: 12px;"/>
        <Button text="Annuler" onAction="#annuler"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-size: 12px;"/>
        <Button text="Ajouter" onAction="#ajouter"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-size: 12px;"/>
    </HBox>

</VBox>