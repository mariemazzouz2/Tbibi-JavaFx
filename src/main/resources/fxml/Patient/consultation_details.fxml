<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tests.Patient.PatientConsultationDetailsController"
            styleClass="root" stylesheets="@../../styles/modern.css">

    <top>
        <VBox styleClass="header-section" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Détails de la consultation" styleClass="header-label"/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" styleClass="content-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Basic Information -->
            <VBox spacing="10" styleClass="dashboard-section">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Informations générales" styleClass="section-header"/>
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <!-- ID -->
                    <Label text="Référence:" styleClass="stat-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="labelId" styleClass="stat-label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <!-- Type -->
                    <Label text="Type:" styleClass="stat-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="labelType" styleClass="stat-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <!-- Status -->
                    <Label text="Status:" styleClass="stat-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="labelStatus" styleClass="stat-label" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <!-- Date -->
                    <Label text="Date et heure:" styleClass="stat-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="labelDate" styleClass="stat-label" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    
                    <!-- Doctor -->
                    <Label text="Médecin:" styleClass="stat-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Label fx:id="labelMedecin" styleClass="stat-label" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    
                    <!-- Meet Link -->
                    <Label text="Lien de réunion:" styleClass="stat-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <Hyperlink fx:id="linkMeet" styleClass="modern-link" onAction="#handleMeetLinkAction" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    
                    <!-- Ordonnance Status -->
                    <Label text="Ordonnance:" styleClass="stat-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="6" GridPane.columnIndex="1">
                        <Label fx:id="labelOrdonnanceStatus" styleClass="stat-label"/>
                        <Button fx:id="btnViewOrdonnance" text="Voir" onAction="#handleViewOrdonnance" 
                                styleClass="button-raised, button-info">
                            <graphic>
                                <FontAwesomeIconView glyphName="FILE_TEXT" size="16"/>
                            </graphic>
                        </Button>
                    </HBox>
                </GridPane>
            </VBox>
            
            <!-- Comment Section -->
            <VBox spacing="10" styleClass="dashboard-section">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Commentaire / Symptômes" styleClass="section-header"/>
                <TextArea fx:id="textCommentaire" wrapText="true" VBox.vgrow="ALWAYS" 
                         styleClass="comments-area" editable="false"/>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="action-buttons">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="btnModify" text="Modifier" onAction="#handleModifyAction" 
                    styleClass="button-raised, button-secondary">
                <graphic>
                    <FontAwesomeIconView glyphName="EDIT" size="16"/>
                </graphic>
            </Button>
            <Button fx:id="btnClose" text="Fermer" onAction="#handleClose" 
                    styleClass="button-raised, button-primary">
                <graphic>
                    <FontAwesomeIconView glyphName="TIMES" size="16"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane> 