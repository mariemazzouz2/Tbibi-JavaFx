<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tests.Patient.PatientConsultationController"
            styleClass="root" stylesheets="@../../styles/modern.css">

    <top>
        <VBox styleClass="header-section" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Mes consultations" styleClass="header-label"/>
            
            <!-- Filter Section -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-section">
                <ComboBox fx:id="filterStatus" promptText="Status" prefWidth="150"/>
                <ComboBox fx:id="filterType" promptText="Type" prefWidth="150"/>
                <DatePicker fx:id="filterDate" promptText="Date" styleClass="filter-date"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Rechercher..." 
                          prefWidth="200" styleClass="search-field"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10" styleClass="content-section">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <TableView fx:id="tableConsultations" VBox.vgrow="ALWAYS" 
                      styleClass="consultation-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="colMedecin" text="Médecin" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
    <bottom>
        <BorderPane styleClass="action-buttons">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <left>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnSchedule" text="Planifier" onAction="#handleScheduleAction" 
                            styleClass="button-raised, button-primary">

                    </Button>
                    <Button fx:id="btnCancel" text="Annuler" onAction="#handleCancelAction" 
                            styleClass="button-raised, button-danger">
                        <graphic>
                            <FontAwesomeIconView glyphName="TIMES" size="16"/>
                        </graphic>
                    </Button>
                    <Button fx:id="btnView" text="Voir détails" onAction="#handleViewAction" 
                            styleClass="button-raised, button-info">
                        <graphic>
                            <FontAwesomeIconView glyphName="INFO_CIRCLE" size="16"/>
                        </graphic>
                    </Button>
                </HBox>
            </left>
            
            <right>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Précédent" onAction="#handlePreviousPage" 
                            styleClass="button-raised, button-secondary">
                        <graphic>
                            <FontAwesomeIconView glyphName="CHEVRON_LEFT" size="16"/>
                        </graphic>
                    </Button>
                    <Button text="Suivant" onAction="#handleNextPage" 
                            styleClass="button-raised, button-secondary">
                        <graphic>
                            <FontAwesomeIconView glyphName="CHEVRON_RIGHT" size="16"/>
                        </graphic>
                    </Button>
                </HBox>
            </right>
        </BorderPane>
    </bottom>
</BorderPane> 