<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tests.Admin.FormOrdonnanceController">
    <stylesheets>
        <URL value="@../../Styles.css" />
    </stylesheets>
    <children>
        <VBox spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Formulaire Ordonnance" styleClass="title-label" />
                </HBox>
                
                <Separator />
                
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                    </columnConstraints>
                    
                    <Label text="Consultation:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <ComboBox fx:id="consultationComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300" />
                    
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextArea fx:id="descriptionTextArea" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="150" wrapText="true" />
                    
                    <Label text="Signature:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="signatureTextField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                </GridPane>
                
                <Region VBox.vgrow="ALWAYS" />
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="cancelButton" text="Annuler" onAction="#cancel" styleClass="button" />
                    <Button fx:id="saveButton" text="Enregistrer" onAction="#saveOrdonnance" styleClass="button-primary" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>