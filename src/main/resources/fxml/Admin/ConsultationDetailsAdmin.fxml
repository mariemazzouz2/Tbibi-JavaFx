<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tests.Admin.ConsultationDetailsAdminController">
    <stylesheets>
        <URL value="@../../Styles.css" />
    </stylesheets>
    <children>
        <VBox spacing="15.0" styleClass="vbox" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>
                <Label text="Détails de la Consultation" styleClass="title-label" />
                
                <GridPane hgap="15.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
                    </columnConstraints>
                    
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    
                    <children>
                        <Label fx:id="idLabel" text="ID: " GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                        <Label fx:id="typeLabel" text="Type: " GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                        <Label fx:id="statusLabel" text="Statut: " GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                        <Label fx:id="dateLabel" text="Date: " GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                        <Label fx:id="medecinLabel" text="Médecin: " GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                        <Label fx:id="patientLabel" text="Patient: " GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                        <Label fx:id="meetLinkLabel" text="Lien de réunion: " GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                    </children>
                </GridPane>
                
                <VBox spacing="5.0">
                    <Label text="Commentaire:" />
                    <TextArea fx:id="commentaireTextArea" prefHeight="100.0" wrapText="true" editable="false" />
                </VBox>
                
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Label text="Ordonnance:" />
                    <Label fx:id="ordonnanceLabel" text="Non disponible" />
                    <Button text="Voir/Créer Ordonnance" onAction="#showOrdonnance" styleClass="button-primary" />
                </HBox>
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button text="Modifier" onAction="#editConsultation" styleClass="button-secondary" />
                    <Button text="Supprimer" onAction="#deleteConsultation" styleClass="button-danger" />
                    <Button text="Fermer" onAction="#closeDetails" styleClass="button" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>