<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.Categorie.AjoutCategorieEv"
      spacing="20"
      style="-fx-background-color: #f5f5f5;"
      prefWidth="500"
      prefHeight="500">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Ajouter une Catégorie" 
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <VBox spacing="15">
        <Label text="Nom de la catégorie:" 
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <TextField fx:id="nomField" 
                   promptText="Entrez le nom de la catégorie"
                   style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"
                   prefHeight="40"/>

        <Label text="Description:" 
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <TextArea fx:id="descriptionField"
                  promptText="Entrez la description de la catégorie"
                  style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"
                  prefHeight="100"
                  wrapText="true"/>
    </VBox>

    <Button text="Ajouter" 
            onAction="#handleAdd"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15 30; -fx-background-radius: 5;"
            prefWidth="200"/>

</VBox>
