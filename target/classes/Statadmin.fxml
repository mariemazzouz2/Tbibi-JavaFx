<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Statadmin"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #F5F7FA;">

    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: #3B82F6; -fx-padding: 20;">
            <children>
                <HBox alignment="CENTER" style="-fx-padding: 10;">
                    <Label text="TBIBI CENTER" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                </HBox>
                <Label text="DASHBOARD" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 20 0 10 10;" />
                <Label text="INTERFACE" style="-fx-text-fill: #A3BFFA; -fx-font-size: 12px; -fx-padding: 10 0 5 10;" />
                <Button text="Liste Demandes" onAction="#goToListeDemandes" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Statistique" onAction="#goToListeStats" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Liste Users" onAction="#goToListeUsers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Label text="ADDONS" style="-fx-text-fill: #A3BFFA; -fx-font-size: 12px; -fx-padding: 10 0 5 10;" />
                <Button text="Pages" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-padding: 5 10;" />
                <Button text="Tables" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-padding: 5 10;" />
                <Button text="Evenement" onAction="#goToEvent" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Categorie" onAction="#goToCategory" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            </children>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox fx:id="chartsContainer" spacing="30" style="-fx-padding: 30; -fx-background-color: #F5F7FA;">
                    <children>
                        <Label fx:id="totalQuestionsLabel" text="Total Questions: 0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                        <Label fx:id="totalVotesLabel" text="Total Votes: 0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                        <Label fx:id="popularSpecialiteLabel" text="Most Popular SpecialitÃ©: N/A" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                        <!-- Charts will be added programmatically here -->
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>