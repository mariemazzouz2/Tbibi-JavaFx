<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tests.Admin.OrdonnanceDetailsAdminController">
    <stylesheets>
        <URL value="@../../Styles.css" />
    </stylesheets>
    <children>
        <VBox spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Détails de l'Ordonnance" styleClass="title-label" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Fermer" onAction="#closeDetails" styleClass="button" />
                </HBox>
                
                <Separator />
                
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                    </columnConstraints>
                    
                    <Label fx:id="idLabel" text="ID: 123" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="detail-id" />
                    
                    <Label text="Consultation ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="detail-label" />
                    <Label fx:id="consultationIdLabel" text="456" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Date de consultation:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="detail-label" />
                    <Label fx:id="consultationDateLabel" text="01/01/2023 14:30" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <Label text="Patient:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="detail-label" />
                    <Label fx:id="patientLabel" text="Nom Prénom" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                    
                    <Label text="Médecin:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="detail-label" />
                    <Label fx:id="medecinLabel" text="Dr. Nom Prénom" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    
                    <Label text="Signature:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="detail-label" />
                    <Label fx:id="signatureLabel" text="Dr. Nom Prénom" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    
                    <Label text="Description:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="detail-label" />
                    <TextArea fx:id="descriptionTextArea" editable="false" wrapText="true" prefHeight="100" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                </GridPane>
                
                <Region VBox.vgrow="ALWAYS" />
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button text="Voir Consultation" onAction="#showConsultation" styleClass="button-secondary" />
                    <Button text="Modifier" onAction="#editOrdonnance" styleClass="button-primary" />
                    <Button text="Supprimer" onAction="#deleteOrdonnance" styleClass="button-danger" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>