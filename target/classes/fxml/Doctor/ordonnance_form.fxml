<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tests.Doctor.DoctorOrdonnanceFormController"
            styleClass="root" stylesheets="@../../styles/modern.css">

    <top>
        <VBox styleClass="header-section" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Create Prescription" styleClass="header-label"/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" styleClass="content-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Patient Information -->
            <VBox spacing="10" styleClass="dashboard-section">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Patient Information" styleClass="section-header"/>
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="Patient:" styleClass="stat-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="labelPatient" styleClass="stat-label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Date:" styleClass="stat-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="labelDate" styleClass="stat-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
            
            <!-- Prescription Content -->
            <VBox spacing="10" styleClass="dashboard-section">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Prescription Details" styleClass="section-header"/>
                <TextArea fx:id="textDescription" wrapText="true" VBox.vgrow="ALWAYS" 
                         styleClass="comments-area" minHeight="200"/>
            </VBox>
            
            <!-- Signature Section -->
            <VBox spacing="10" styleClass="dashboard-section">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Signature" styleClass="section-header"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="textSignature" HBox.hgrow="ALWAYS" styleClass="modern-text-field"/>
                    <Button fx:id="btnBrowseImage" text="Browse..." onAction="#handleBrowseImage" 
                            styleClass="button-raised, button-info">
                        <graphic>
                            <FontAwesomeIconView glyphName="FILE_IMAGE_O" size="16"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="action-buttons">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel" styleClass="button-flat">
                <graphic>
                    <FontAwesomeIconView glyphName="TIMES" size="16"/>
                </graphic>
            </Button>
            <Button fx:id="btnSave" text="Save" onAction="#handleSave" styleClass="button-raised, button-primary">
                <graphic>
                    <FontAwesomeIconView glyphName="SAVE" size="16"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane> 