<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BaseWindow" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F5F7FA;">
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;">
            <children>
                <TextField fx:id="searchField" promptText="Search for..." style="-fx-max-width: 200; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #D1D5DB;" />
                <Button text="🔍" onAction="#onSearchClicked" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-background-radius: 50; -fx-padding: 5;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="labelNomUtilisateur" styleClass="user-info" text="Utilisateur">
                    <graphic>
                        <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" fill="black" />
                    </graphic>
                </Label>
                <Button text="Logout" onAction="#logout" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 6 12;" />
            </children>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: #3B82F6; -fx-padding: 20;">
            <children>
                <HBox alignment="CENTER" style="-fx-padding: 10;">
                    <Label text="TBIBI CENTER" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                </HBox>
                <Label text="DASHBOARD" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 20 0 10 10;" />
                <Label text="INTERFACE" style="-fx-text-fill: #A3BFFA; -fx-font-size: 12px; -fx-padding: 10 0 5 10;" />
                <Button text="Liste Demandes" onAction="#goToListeDemandes" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Statistique" onAction="#goToListeStats" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Liste Users" onAction="#goToListeUsers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Label text="ADDONS" style="-fx-text-fill: #A3BFFA; -fx-font-size: 12px; -fx-padding: 10 0 5 10;" />
                <Button text="Evenement" onAction="#goToEvent" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Categorie" onAction="#goToCategory" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <HBox spacing="10">
                <Button text="Ajouter utilisateur" onAction="#goToAddUser" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                <Button text="Envoyer SMS" onAction="#goToSmsForm" style="-fx-background-color: #F87171; -fx-text-fill: white;" />
            </HBox>
            <AnchorPane>
                <TableView fx:id="tableViewUtilisateurs" prefWidth="560.0" prefHeight="500.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                    <columns>
                        <TableColumn fx:id="colNom" text="Nom" prefWidth="100" />
                        <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="100" />
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="150" />
                        <TableColumn fx:id="colRole" text="Rôle" prefWidth="100" />
                        <TableColumn fx:id="colAdresse" text="Adresse" prefWidth="150" />
                        <TableColumn fx:id="colDateNaissance" text="Date Naissance" prefWidth="120" />
                        <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="100" />
                        <TableColumn fx:id="colSexe" text="Sexe" prefWidth="80" />
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="150" />
                    </columns>
                </TableView>
                <Pagination fx:id="pagination" layoutY="520.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" />
            </AnchorPane>
        </VBox>
    </center>

    <right>
        <VBox spacing="10.0" prefWidth="200.0" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <Label text="Filtres" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="filterNomField" promptText="Nom" />
            <ComboBox fx:id="filterRoleBox" promptText="Rôle">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ROLE_PATIENT" />
                        <String fx:value="ROLE_MEDECIN" />
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox fx:id="filterSexeBox" promptText="Sexe">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Homme" />
                        <String fx:value="Femme" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Label text="Date de naissance entre :" />
            <HBox spacing="5">
                <DatePicker fx:id="filterDateNaissanceStartPicker" promptText="Début" />
                <DatePicker fx:id="filterDateNaissanceEndPicker" promptText="Fin" />
            </HBox>
            <Button text="Appliquer Filtres" onAction="#onAppliquerFiltres" style="-fx-background-color: #3B82F6; -fx-text-fill: white;" />
            <Button text="Réinitialiser" onAction="#onResetFiltres" style="-fx-background-color: #F87171; -fx-text-fill: white;" />
        </VBox>
    </right>
</BorderPane>