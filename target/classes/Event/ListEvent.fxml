<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.Evenement.AfficherEvent"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Liste des Événements" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Button text="Ajouter un Événement" onAction="#onAddClick"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <ScrollPane fitToWidth="true">
        <content>
            <VBox fx:id="evenementsContainer" spacing="10"/>
        </content>
    </ScrollPane>

</VBox>